//- available properties:
  style: filled;
  size:;
  href: string;
  disabled: boolean;

mixin button(properties)
  - const modifierTemplate = "button--";
  - const styles = ["button"];

  - if (properties.style) styles.push(modifierTemplate + properties.style);
  - if (properties.size) styles.push(modifierTemplate + properties.size);

  if properties.href
    a(class=styles.join(" "), href=properties.href)= properties.text || ""
  else
    button(class=styles.join(" "), disabled=properties.disabled || false)= properties.text || ""
