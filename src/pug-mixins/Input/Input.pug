//- arrow:boolean; size: small, medium, large; mask: date;
//- dropdown: boolean; readonly: boolean;
//- value:string || number;

mixin input(properties)
  - const modifierTemplate = "input--";
  - const styles = ["input"];
  - const maskList = {
  - date: {mask:'00.00.0000', pattern: "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"} 
  - };

  .input__wrapper(class=properties.size ? modifierTemplate + "size-" + properties.size : false)
    input(
      class=styles.join(" "),
      type=properties.type,
      value=properties.value || false,
      placeholder=properties.placeholder || false,
      data-mask=properties.mask ? maskList[properties.mask].mask : false,
      pattern=properties.mask ? maskList[properties.mask].pattern : false,
      title=properties.mask ? "Введите дату в формате ДД.ММ.ГГГГ" : false,
      readonly=properties.readonly || false
    )&attributes(attributes)

    if properties.arrow
      span.input__icon.input__icon--arrow
    if properties.dropdown
      span.input__icon.input__icon--expand
