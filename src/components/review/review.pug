//- available properties:
  avatar: string;
  name: string;
  date: string;
  text: string;
  likesNumber: number;
  isLikePressed: boolean;

include /components/button-like/button-like.pug

mixin review({ avatar, name, date, text, likesNumber, isLikePressed = true })
  section.review
    .review__author
      img.review__avatar(src=avatar, alt=name)
      .review_author-wrapper
        h4.review__name= name
        span.review__date= date
    .review__info
      .review__button-like
        +button-like({ likesNumber, isPressed: isLikePressed })
      p.review__text!= text
