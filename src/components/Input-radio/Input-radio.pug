//- available properties:
  checked: boolean;
  value: string;
  name: string;
  text: string

mixin input-radio({checked= false, value=false, name=false, text})
  label.input-radio__label
    input.input-radio(type='radio', checked=checked, value=value, name=name)
    span.input-radio__icon
    span.input-radio__label-text= text
