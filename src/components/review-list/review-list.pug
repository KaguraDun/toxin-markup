//- available properties:
  items: Item[];
  Item: {
    avatar: string;
    name: string;
    date: string;
    text: string;
    likesNumber: number;
    likePressed: boolean;
  };

include /components/review/review.pug

mixin review-list({ items })
  - const reviewNumber = `${items.length} отзыва`;

  section.review-list
    .review-list__info
      h2.review-list__heading= 'Отзывы посетителей номера'
      span.review-list__number= reviewNumber
    .review-list__items
      each item in items
        +review(item)
