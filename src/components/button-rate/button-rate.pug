//- available properties:
  score: 1 | 2 | 3 | 4 | 5;
  name: string;
  disabled: boolean

mixin button-rate({ score, name, inputName, disabled = true })
  - const rateValues = ['Ужасно', 'Сносно', 'Нормально', 'Хорошо', 'Отлично'];

  fieldset.button-rate(disabled=disabled, name=name)
    .button-rate__input-group
      each val, i in rateValues
        - const isChecked = i < score;
        input.button-rate__star(
          aria-label=val,
          checked=isChecked,
          name=inputName,
          type='radio',
          value=val
        )
