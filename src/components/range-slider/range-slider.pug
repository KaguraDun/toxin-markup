//- available properties:
  label: string;
  additionalText: string

mixin range-slider({ label, additionalText = null})
  .range-slider.js-range-slider
    .range-slider__info
      span.range-slider__name= label
      span.range-slider__price-range.js-range-slider-price-range
    .range-slider__container.js-range-slider-container
    p.range-slider__additional-text= additionalText
