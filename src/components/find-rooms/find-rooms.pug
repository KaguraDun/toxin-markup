include /components/date-dropdown/date-dropdown.pug
include /components/button/button.pug

mixin find-rooms
  form.find-rooms
    h2.find-rooms__heading!= "Найдём номера под <br> ваши пожелания"
    -
      const dateDropdownProps = {
        arrivalLabel:'прибытие',
        departureLabel:'выезд',
        dropdownArrivalClass: 'js-find-rooms__dropdown-arrival',
        dropdownDepartureClass: 'js-find-rooms__dropdown-departure',
      }
    .find-rooms__date-dropdown
      +date-dropdown(dateDropdownProps)
    .find-rooms__dropdown-guests
      .js-find-rooms__dropdown-guests
    .find-rooms__button
      -
        const buttonProps = {
          type:'submit',
          width:'full',
          style: 'filled',
          arrow:true,
          text:'подобрать номер',
        }
      +button(buttonProps)
