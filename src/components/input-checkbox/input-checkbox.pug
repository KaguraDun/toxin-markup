//- available properties:
  text: string;
  name: string;
  info: string;
  checked: boolean;

mixin input-checkbox({ text, name, info, checked = false })
  label.input-checkbox
    input.input-checkbox__input(type='checkbox', checked=checked, name=name)
    span.input-checkbox__input-icon
    if info
      span.input-checkbox__text-wrapper
        span.input-checkbox__heading!= text
        span.input-checkbox__info!= info
    else
      span.input-checkbox__text!= text
