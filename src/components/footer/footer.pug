include /components/logo/logo.pug
include /components/input/input.pug
include /components/copyright/copyright.pug
include /components/socials/socials.pug

mixin footer
  footer.footer
    .footer__widgets
      .footer__container
        .footer__grid
          .footer__grid-column
            .footer__logo
              +logo({style:'colored'})
            p.footer__text= "Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды»"
          .footer__grid-column
            ul.footer__item-list 
              li.footer__item-heading= "Навигация"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "О нас"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Новости"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Служба поддержки"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Услуги"
          .footer__grid-column
            ul.footer__item-list
              li.footer__item-heading= "О нас"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "О сервисе"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Наша команда"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Вакансии"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Инвесторы"
          .footer__grid-column
            ul.footer__item-list
              li.footer__item-heading= "Служба поддержки"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Соглашения"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Сообщества"
              li.footer__item
                a.footer__item-link(href='/mock-address.html')= "Связь с нами"
          .footer__grid-column
            .footer__item-heading= "Подписка"
            p.footer__text= "Получайте специальные предложения и новости сервиса"
            .footer__input-email
              +input({type:'email', placeholder:'Email', arrow: true })
    .footer__copyright
      .footer__container
        .footer__copyright-wrapper
          .footer__copyright-logo
            +logo({style:'colored'})
          .footer__copyright-text
            +copyright
          +socials
