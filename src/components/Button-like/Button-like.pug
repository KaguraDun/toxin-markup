//- available properties:
  likesNumber: number;
  disabled: boolean;
  isPressed

mixin button-like({ disabled = false, likesNumber, isPressed=false })
  -
    const buttonStyles = {
      'button-like': true,
      'button-like--pressed': isPressed
    }

  button(class=buttonStyles, disabled=disabled)&attributes(attributes)
    span.button-like__icon
    span.button-like__likes-number= likesNumber
