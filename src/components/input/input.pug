//- available properties:
  type: string;
  placeholder: string;
  value: string | number;
  arrow: boolean;
  size: small | medium | large | full;
  mask: date;
  dropdown: boolean;
  readonly: boolean;
  required: boolean;

mixin input({type='text', placeholder=false, value=false, arrow= false, size='full', mask=false, dropdown=false, readonly=false, required=false})
  -
    const maskList = {
      date: {
        mask: "00.00.0000",
          pattern: "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
        }
      };
  - const inputSize = `input_size_${size}`;

  .input__wrapper(class=inputSize)
    input.input(
      type=type,
      value=value,
      placeholder=placeholder,
      data-mask=mask ? maskList[mask].mask : false,
      pattern=mask ? maskList[mask].pattern : false,
      title=mask ? "Введите дату в формате ДД.ММ.ГГГГ" : false,
      readonly=readonly,
      required=required
    )&attributes(attributes)

    if arrow
      span.input__icon.input__icon_arrow
    if dropdown
      span.input__icon.input__icon_expand
