//- available properties:
  type: string;
  placeholder: string;
  value: string | number;
  size: small | medium | large | full;
  icon: none | arrow | expand-more | expand-less
  mask: date;
  readonly: boolean;
  required: boolean;

mixin input({type='text', placeholder=false, value=false, icon='none', size='full', mask=false, readonly=false, required=false})
  -
    const maskList = {
      date: {
        mask: "00.00.0000",
          pattern: "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
        }
      };
  -
    const sizes = {
      small: 'input_size_small',
      medium: 'input_size_medium',
      large: 'input_size_large',
      full: 'input_size_full',
    }

  .input__wrapper(class=sizes[size])
    input.input(
      type=type,
      value=value,
      placeholder=placeholder,
      data-mask=mask ? maskList[mask].mask : false,
      pattern=mask ? maskList[mask].pattern : false,
      title=mask ? "Введите дату в формате ДД.ММ.ГГГГ" : false,
      readonly=readonly,
      required=required
    )&attributes(attributes)

    if icon !== 'none'
      -
        const icons = {
          arrow: 'input__icon_style_arrow',
          'expand-more': 'input__icon_style_expand-more',
          'expand-less': 'input__icon_style_expand-less',
        }
        const iconClassNames = {
          'input__icon': true,
          ...({[icons[icon]]: true}),
        }

      span(class=iconClassNames)
