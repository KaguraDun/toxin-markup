//- available properties:
  type: string;
  placeholder: string;
  value: string | number;
  size: small | medium | large | full;
  button: none | arrow | expand-more | expand-less
  mask: date;
  readonly: boolean;
  required: boolean;
  buttonOpenCalendar: boolean;

mixin input(options)
  -
    const {
      type = 'text',
      placeholder = false,
      value = false,
      button = 'none',
      size = 'full',
      mask = false,
      readonly = false,
      required = false,
      buttonOpenCalendar = false,
    } = options
  -
    const maskList = {
      date: {
        mask: "00.00.0000",
          pattern: "(0[1-9]|1[0-9]|2[0-9]|3[01]).(0[1-9]|1[012]).[0-9]{4}"
        }
      };
  -
    const sizes = {
      small: 'input_size_small',
      medium: 'input_size_medium',
      large: 'input_size_large',
      full: 'input_size_full',
    }

  .input(class=sizes[size])
    input.input__input(
      type=type,
      value=value,
      placeholder=placeholder,
      data-mask=mask ? maskList[mask].mask : false,
      pattern=mask ? maskList[mask].pattern : false,
      title=mask ? "Введите дату в формате ДД.ММ.ГГГГ" : false,
      readonly=readonly,
      required=required
    )&attributes(attributes)

    if button !== 'none'
      -
        const icons = {
          arrow: 'input__button-icon_style_arrow',
          'expand-more': 'input__button-icon_style_expand-more',
          'expand-less': 'input__button-icon_style_expand-less', 
        }
      - const buttonType = buttonOpenCalendar ? "button" : "submit";

      button.input__button(type=buttonType, data-toggle=buttonOpenCalendar)
        span(class=`input__button-icon ${icons[button]}`)
