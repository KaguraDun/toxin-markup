//- available properties:
  currentPage: number;
  pagesCount: number;
  itemsPerPage: number;

include /components/button/button.pug

mixin pagination({ currentPage, pagesCount, itemsPerPage })
  - const rightValue = itemsPerPage * currentPage;
  - const leftValue = rightValue - itemsPerPage + 1;

  .pagination
    .pagination__controls
      +button({ style: 'page_selected', text: '1' })
      +button({ style: 'page', text: '2' })
      +button({ style: 'page', text: '3' })
      span.pagination__ellipsis= "..."
      +button({ style: 'page', text: pagesCount })
      +button({ style: 'page_next', withArrow :true })
    p.pagination__text= `${leftValue} - ${rightValue} из 100+ вариантов аренды`
