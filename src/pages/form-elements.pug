extends /layouts/base.pug
block baseVariables
  - const title = "Form elements";
  - const bodyClass = "form-elements";

block content
  -
    const checkboxListItems = [
      { text: "Завтрак", checked: false },
      { text: "Письменный стол", checked: true },
      { text: "Стул для кормления", checked: true },
      { text: "Кроватка", checked: true },
      { text: "Телевизор", checked: false },
      { text: "Шампунь", checked: false },
    ]

    const roomInfoItems = [
      { info: 'comfort', underline: true },
      { info: 'convenience', underline: true },
    ]

  .form-elements__logo
    .form-elements__logo-icon
      - const isGray = true;
      include /pug-components/Logo/Logo.pug
  .form-elements__container
    include /pug-mixins/Input/Input.pug
    include /pug-mixins/Date-dropdown/Date-dropdown.pug
    include /pug-mixins/Input-checkbox/Input-checkbox.pug
    include /pug-mixins/Input-radio/Input-radio.pug
    include /pug-mixins/Input-toggle/Input-toggle.pug
    include /pug-mixins/Button-like/Button-like.pug
    include /pug-mixins/Button-rate/Button-rate.pug
    include /pug-mixins/Checkbox-list/Checkbox-list.pug
    include /pug-mixins/Room-info/Room-info.pug
    .form-elements__column
      .form-elements__item
        .form-elements__item-info
          .form-elements__item-name= "text field"
          .form-elements__item-state= "default"
        +input({type:'text', placeholder:'Email', size:'large'})
      .form-elements__item
        .form-elements__item-info
          .form-elements__item-name= "text field"
          .form-elements__item-state= "hover / focus"
        +input({type:'text', value:'This is pretty awesome', size:'large'}).input--hover
      .form-elements__item
        //- create container for dropdown, set properties in index.js
        .js-dropdown-guests
      .form-elements__item.form-elements__item--large-margin
        .form-elements__item-info
          .form-elements__item-name= "masked text field"
        +input({type:'text', placeholder:'ДД.ММ.ГГГГ', size:'large', mask:'date'})
      .form-elements__item.form-elements__item--large-margin
        +date-dropdown({departureValue: '19.08.2019', arrivalLabel:'date dropdown', departureLabel:'date dropdown'})
      .form-elements__item.form-elements__item--large-margin
        +date-dropdown({dateFilter: true, filterDateValue:'19 авг - 23 авг', filterDateLabel: 'filter date dropdown', size:'medium'})
      .form-elements__item.form-elements__item--largest-margin
        .form-elements__item-info
          .form-elements__item-name= "subscription text field"
        +input({type:'email', placeholder:'Email', arrow: true, size:'medium' })
      .form-elements__item.form-elements__item--size-medium
        .form-elements__item-info
          .form-elements__item-name= "dropdown"
          .form-elements__item-state= "default"
        //- create container for dropdown, set properties in index.js
        .js-dropdown-room-amenity
      .form-elements__item.form-elements__item--size-medium
        .form-elements__item-info
          .form-elements__item-name= "dropdown"
          .form-elements__item-state= "expanded"
        //- create container for dropdown, set properties in index.js
        .js-dropdown-room-amenity-expanded
      .form-elements__item.form-elements__item--size-medium
        +checkbox-list({
          name: 'expandable checkbox list',
          expanded: false,
          items: checkboxListItems
        })
      .form-elements__item.form-elements__item--size-medium.form-elements__item--largest-margin
        +checkbox-list({
          name: 'expandable checkbox list',
          expanded: true,
          items: checkboxListItems
        })
      .form-elements__item
        +room-info({items: roomInfoItems})

    .form-elements__column.form-elements__column--small-right-margin
      .form-elements__item.form-elements__item--large-margin
        fieldset.form-elements__fieldset
          legend.form-elements__fieldset-legend= "checkbox buttons"
          +input-checkbox({text:'Можно курить'})
          +input-checkbox({text:'Можно с питомцами', checked:true})
          +input-checkbox({text:'Можно пригласить гостей (до 10 человек)', checked:true})
      .form-elements__item.form-elements__item--large-margin
        fieldset.form-elements__fieldset.form-elements__fieldset--row
          legend.form-elements__fieldset-legend= "radio buttons"
          +input-radio({text:'Мужчина', value:'мужчина', name:'gender', checked:true})
          +input-radio({text:'Женщина', value:'женщина', name:'gender'})
      .form-elements__item.form-elements__item--large-margin
        fieldset.form-elements__fieldset
          legend.form-elements__fieldset-legend= "toggle"
          +input-toggle({text:'Получать спецпредложения', checked:true})
          +input-toggle({text:'Получать спецпредложения'})
      .form-elements__item.form-elements__item--large-margin
        fieldset.form-elements__fieldset.form-elements__fieldset--row
          legend.form-elements__fieldset-legend= "like button"
          +button-like({likesNumber:2})
          +button-like({likesNumber:12}).button-like--pressed
      .form-elements__item.form-elements__item--large-margin
        .form-elements__item-info.form-elements__item-info--large-margin
          .form-elements__item-name= "rate button"
        .form-elements__item-wrapper
          +button-rate({name:'rating', score:4})
          +button-rate({name:'rating-second', score:5})

    .form-elements__column
      .form-elements__item.form-elements__item--large-margin.form-elements__item--size-medium
        .form-elements__item-info.form-elements__item-info--large-margin
          .form-elements__item-name= "range slider"
          .form-elements__item-state= "5 000₽ - 10 000₽"
        //- create container for noUiSlider, set properties in index.js
        .js-range-slider
