extends ../layouts/base.pug
block baseVariables
  - var title = "Colors and type";
  - var bodyClass = "colors-and-type";

block content
  .colors-and-type__logo
    .colors-and-type__logo-icon
      - var isGray = true;
      include ../components/Logo/Logo.pug
  .colors-and-type__container
    ul.colors-and-type__colors
      include ../pug-mixins/Color-example/Color-example.pug
      li.colors-and-type__colors-item
        +color-example('rgba(31, 32, 65, 1)', '#1F2041', 'Dark Shade 100%')
      li.colors-and-type__colors-item
        +color-example('rgba(31, 32, 65, 0.75)','#1F2041', 'Dark Shade 75%')
      li.colors-and-type__colors-item
        +color-example('rgba(31, 32, 65, 0.5)','#1F2041', 'Dark Shade 50%')
      li.colors-and-type__colors-item
        +color-example('rgba(31, 32, 65, 0.25)','#1F2041', 'Dark Shade 25%')
      li.colors-and-type__colors-item
        +color-example('rgba(31, 32, 65, 0.05)','#1F2041', 'Dark Shade 5%')
      li.colors-and-type__colors-item
        +color-example('rgba(188, 156, 255, 1)','#BC9CFF', 'Purple')
      li.colors-and-type__colors-item
        +color-example('rgba(111, 207, 151, 1)','#6FCF97', 'Green') 
    .colors-and-type__type
