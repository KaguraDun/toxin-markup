extends /layouts/base.pug

include /components/logo/logo.pug
include /components/find-rooms/find-rooms.pug
include /components/sign-up/sign-up.pug
include /components/book-room/book-room.pug
include /components/sign-in/sign-in.pug

block baseVariables
  - const title = "Cards";
  - const bodyClass = "cards";

block content
  .cards__logo
    .cards__logo-icon 
      +logo({style:'gray'})

  .cards__container
    .cards__column 
      +find-rooms
      +sign-up

    .cards__column
      +book-room
      +sign-in

    .cards__column
      .cards__calendar
        .js-cards-calendar--opened 
