block headerVariables
header.header
  .container
    .header__left-col
      include ../Logo/Logo.pug
    .header__right-col
      include ../Header-nav/Header-nav.pug
      include /pug-mixins/Button/Button.pug
      if isLogged
        .header__vertical-line
        .header__username= "Юлий Цезарь"
      else
        +button({href:'/login', text:'войти'})
        +button({href:'/register', text:'зарегистрироваться', style:'filled'})
