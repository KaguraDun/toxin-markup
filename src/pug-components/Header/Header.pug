block headerVariables

include /pug-mixins/Logo/Logo.pug

header.header
  .container
    .header__left-col
      +logo({style:'colored'})
    .header__right-col
      include /pug-components/Header-nav/Header-nav.pug
      include /pug-mixins/Button/Button.pug
      if isLogged
        .header__vertical-line
        .header__username= "Юлий Цезарь"
      else
        +button({size:'small', href:'/login', text:'войти'})
        +button({size:'small', href:'/register', text:'зарегистрироваться', style:'filled'})
